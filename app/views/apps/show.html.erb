<div class="panel panel-default">
  <div class="panel-heading"><%= @app.name.upcase %></div>
    
<div class="embed-responsive embed-responsive-4by3">
  <iframe class="embed-responsive-item" src=<%=link(@app.video_link)%>></iframe>
</div>
  
  <div class="panel-body">
    <p>
      <strong>Skill:</strong>
      <%= @app.skill %>
    </p>
    <p>
      <strong>Web link:</strong>
      <%= @app.web_link %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @app.price %>
    </p>
 
      <h2>Comments</h2>
        <div id="comments"> 
          <%= render :partial => @app.comments.reverse%>
        </div><br>

        <%= form_for([@app, Comment.new], :remote => true) do |f| %>
            <%= f.label :content %><br>
            <%= f.text_area :content %>
          <%=f.submit%>
        <%end%>  
    
    
 
  </div>
<%= link_to 'Back', apps_path %>
</div>