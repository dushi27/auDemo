<h1>Listing apps</h1>
<% @apps.each do |app| %>
<tr>
  <td><%= app.name %></td>
  <td><%= app.skill %></td>
  <td><%= screen(app.video_link)%></td>
  <td><%= app.web_link %></td>
  <td><%= app.price %></td>
  <td><%= app.user_id %></td>        
  <td><%= link_to 'Show', app %></td>
  <%if current_user.id == app.user_id%>
  <td><%= link_to 'Edit', edit_app_path(app) %></td>
  <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <%end%>
</tr>
<% end %>


<br>

